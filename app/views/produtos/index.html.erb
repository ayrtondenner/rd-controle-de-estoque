<div class="page-header">
  <%= link_to new_produto_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo produto
  <% end %>
  <h1>Lista dos produtos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>CÃ³digo</th>
        <th>Nome</th>
        <th>Fornecedor</th>
        <th>Quantidade</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @produtos) do |produto| %>
        <td><%= produto.codigo %></td>
        <td><%= produto.nome %></td>
        <td><%= produto.fornecedor.razaoSocial %></td>
        <td><%= produto.quantidade %></td>

        <td><%= link_to 'Exibir', produto %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Deletar', produto, method: :delete, data: { confirm: 'Tem certeza disso?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
