<%= form_for(@fornecedor, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @fornecedor.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@fornecedor.errors.count, "error") %> prohibited this fornecedor from being saved:</h4>

      <ul>
      <% @fornecedor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="fornecedor_codigo">Código</label>
    <div class="col-sm-10">
      <%= f.number_field :codigo, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="fornecedor_razaoSocial">Razão social</label>
    <div class="col-sm-10">
      <%= f.text_field :razaoSocial, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="fornecedor_cnpj">CNPJ</label>
    <div class="col-sm-10">
      <%= f.text_field :cnpj, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="button" name="commit" value="Salvar fornecedor" class="btn btn-primary" data-disable-with="Create Fornecedor">
    </div>
  </div>
<% end %>
