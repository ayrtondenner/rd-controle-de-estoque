<div class="page-header">
  <%= link_to new_fornecedor_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Fornecedor
  <% end %>
  <h1>Lista dos fornecedores</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Código</th>
        <th>Razão social</th>
        <th>CNPJ</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @fornecedores) do |fornecedor| %>
            <td><%= fornecedor.codigo %></td>
            <td><%= fornecedor.razaoSocial %></td>
            <td><%= fornecedor.cnpj %></td>
            <td><%= link_to 'Exibir', fornecedor %></td>
        <td><%= link_to 'Editar', edit_fornecedor_path(fornecedor) %></td>
        <td><%= link_to 'Deletar', fornecedor, method: :delete, data: { confirm: 'Tem certeza disso?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
