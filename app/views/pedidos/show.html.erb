<div class="page-header">
  <%= link_to pedidos_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Voltar
  <% end %>
  <%= link_to edit_pedido_path(@pedido), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h1>Exibir pedido</h1>
</div>

<dl class="dl-horizontal">
  <dt>Código:</dt>
  <dd><%= @pedido.codigo %></dd>

  <dt>Cliente:</dt>
  <dd><%= @pedido.cliente.razaoSocial %></dd>

  <dt>Lista de clientes:</dt>
  <dd>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>Código</th>
          <th>Nome</th>
          <th>Fornecedor</th>
        </tr>
        </thead>

        <tbody>
        <%= content_tag_for(:tr, @produtos) do |produto| %>
            <td><%= produto.codigo %></td>
            <td><%= produto.nome %></td>
            <td><%= produto.fornecedor.razaoSocial %></td>
        <% end %>
        </tbody>
      </table>
    </div>
  </dd>

</dl>
