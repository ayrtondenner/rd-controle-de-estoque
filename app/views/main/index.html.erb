<html>
  <head>
    <title>Pagina Principal</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css" type="text/css"/>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  </head>
  <body>
    <div class="panel panel-primary">
      <div class="panel-heading">RD Controle de Estoque</div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-2">
            <div class="panel panel-default">
              <div class="panel-body">
                <%= image_tag("magic.png", class: "img-rounded", alt: "ChapÃ©u", width: "100%", height: "100%") %>

              </div>
            </div>

          </div>
          <div class="col-sm-10">
            <div class="panel panel-default">
              <div class="well" id="usuarioWell">Seja bem-vindo!</div>

              <div class="row">

                <div class="col-sm-3" >
                  <div class="panel panel-default">
                    <%= image_tag("produtos 3.png", class: "center-block", alt: "fornecedor", width: "50%") %>
                    <%= link_to("Fornecedores", fornecedores_path, type: "button", class:"btn btn-primary btn-block") %>
                  </div>
                </div>

                <div class="col-sm-3">
                  <div class="panel panel-default">
                    <%= image_tag("produtos 4.png", class: "center-block", alt: "produtos", width: "50%") %>
                    <%= link_to("Produtos", produtos_path, type: "button", class:"btn btn-primary btn-block") %>
                  </div>
                </div>

                <div class="col-sm-3">
                  <div class="panel panel-default">
                    <%= image_tag("cliente.png", class: "center-block", alt: "cliente", width: "50%") %>
                    <%= link_to("Clientes", clientes_path, type: "button", class:"btn btn-primary btn-block") %>
                  </div>
                </div>

                <div class="col-sm-3">
                  <div class="panel panel-default">
                    <%= image_tag("produtos 1.png", class: "center-block", alt: "funcionarios", width: "50%") %>
                    <%= link_to("Pedidos", pedidos_path, type: "button", class:"btn btn-primary btn-block") %>
                  </div>
                </div>
              </div>
            </div>

            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <tbody>
                  <tr>
                    <td><%= label_tag(nil, "Quantidade de fornecedores:") %></td>
                    <td><%= label_tag(nil, Fornecedor.all.count) %></td>
                  </tr>
                  <tr>
                    <td><%= label_tag(nil, "Quantidade de produtos:") %></td>
                    <td><%= label_tag(nil, Produto.all.count) %></td>
                  </tr>
                  <tr>
                    <td><%= label_tag(nil, "Quantidade de clientes:") %></td>
                    <td><%= label_tag(nil, Cliente.all.count) %></td>
                  </tr>
                  <tr>
                    <td><%= label_tag(nil, "Quantidade de pedidos:") %></td>
                    <td><%= label_tag(nil, Pedido.all.count) %></td>
                  </tr>
                </tbody>
              </table>
            </div>

          </div>
        </div>
      </div>
    </div>
  </body>
</html>
